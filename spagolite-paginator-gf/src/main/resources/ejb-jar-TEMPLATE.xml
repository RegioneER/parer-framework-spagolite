<?xml version="1.0" encoding="UTF-8"?>

<ejb-jar  xmlns = "http://java.sun.com/xml/ns/javaee" 
          version = "3.1"
          xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance" 
          xsi:schemaLocation = "http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd">
    
    <enterprise-beans>
        <session>            
            <ejb-name>Invoker</ejb-name>  
            <local-bean/>
            <ejb-class>it.eng.paginator.ejb.Invoker</ejb-class>
            <session-type>Stateless</session-type>             
            <ejb-local-ref>                
                <ejb-ref-name>java:app/paginator/Invoker</ejb-ref-name>         
                <local>it.eng.paginator.ejb.InvokerLocal</local>                                    
            </ejb-local-ref>      
            <resource-env-ref>
                <resource-env-ref-name>SessionContext</resource-env-ref-name>
                <resource-env-ref-type>javax.ejb.SessionContext</resource-env-ref-type>
                <injection-target>
                    <injection-target-class>it.eng.paginator.ejb.Invoker</injection-target-class>
                    <injection-target-name>context</injection-target-name>
                </injection-target>
            </resource-env-ref> 
        </session>        
    </enterprise-beans>
                 
</ejb-jar>
